<div class="row">
  <div class="span0 well text-center">
    <% if logged_in? %>
      <%= link_to vote_topic_comment_path(comment.topic, comment, vote: true), method:'post', remote: true do %>
        <i class="icon-arrow-up"></i>
      <% end %>
    <% end %><br>
    <span id="comment_<%= comment.id %>_vote"><%= pluralize(comment.total_votes, 'vote') %></span><br>
    <% if logged_in? %>
      <%= link_to vote_topic_comment_path(comment.topic, comment, vote: false), method:'post', remote: true do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    <% end %>
  </div>
  <div class="well span8">
    <p><em>"<%= comment.body %>"</em></p> 
    <span class="quiet">by</span> 
    <%= link_to comment.user.username, user_path(comment.user) %> 
    <small>at <%= comment.created_at %></small>
  </div>
</div>