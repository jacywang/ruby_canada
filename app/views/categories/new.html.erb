<%= render 'shared/content_title', title: 'Create a new category' %>

<%= render 'shared/error', obj: @category %>

<div class="well">
  <%= form_for @category do |f| %>
    <div class="content-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <%= f.submit 'Create', class: 'btn btn-primary' %>
  <% end %>
</div>
